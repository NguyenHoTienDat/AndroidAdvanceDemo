<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tiendatbkhn.recyclerviewexample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.recyclerviewex.RecyclerViewExActivity" />
        <activity android:name=".screen.viewpagerex.ViewPagerActivity" />
        <activity android:name=".screen.asynctaskex.AsyncTaskActivity" />
        <activity android:name=".screen.broadcast.BroadcastActivity" />
        <activity android:name=".screen.notification.NotificationActivity" />
        <activity android:name=".screen.service.ServiceActivity"
            android:launchMode="singleTask"></activity>
        <service android:name=".screen.service.MusicService"/>
    </application>

</manifest>